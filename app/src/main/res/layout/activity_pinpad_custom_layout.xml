                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/keyboard_5"
                android:layout_width="0dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="#FF3F3F3F"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/keyboard_6"
                android:layout_width="0dp"
                android:layout_marginBottom="3dp"
                android:background="#FF3F3F3F"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <!--row3-->
            <Button
                android:id="@+id/keyboard_7"
                android:layout_width="0dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="#FF3F3F3F"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/keyboard_8"
                android:layout_width="0dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="#FF3F3F3F"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/keyboard_9"
                android:layout_width="0dp"
                android:layout_marginBottom="3dp"
                android:background="#FF3F3F3F"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />


            <!--row4-->
            <Button
                android:layout_width="0dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="#FF3F3F3F"
                android:clickable="false"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/keyboard_0"
                android:layout_width="0dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="#FF3F3F3F"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_marginBottom="3dp"
                android:background="#FF3F3F3F"
                android:clickable="false"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/keyboard_cancel"
                android:layout_width="0dp"
                android:layout_marginEnd="3dp"
                android:background="#FFEB452D"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/keyboard_clear"
                android:layout_width="0dp"
                android:layout_marginEnd="3dp"
                android:background="#FFFCB901"
                android:text="Clear"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/keyboard_confirm"
                android:layout_width="0dp"
                android:background="#FF37BE31"
                android:text="Confirm"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />
        </androidx.gridlayout.widget.GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

