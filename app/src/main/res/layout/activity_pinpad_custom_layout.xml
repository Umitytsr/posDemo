<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pinkeypad.PinpadCustomLayoutActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keypad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">



        <TextView
            android:id="@+id/textPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:letterSpacing="0.7"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/keyboard_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            app:columnCount="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:rowCount="5">
            <!--row1-->
            <Button
                android:id="@+id/keyboard_1"
                android:layout_width="0dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="#FF3F3F3F"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/keyboard_2"
                android:layout_width="0dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="#FF3F3F3F"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/keyboard_3"
